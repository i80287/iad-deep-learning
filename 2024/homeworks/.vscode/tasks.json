{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang++ build active file",
			"command": "/usr/bin/clang++",
			"args": [
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-std=c++20",
				"-D__VSCODE_LOCALGHOST__=1",
				"-D_GLIBCXX_DEBUG",
				"-D_GLIBCXX_DEBUG_PEDANTIC",
				"-D_GLIBCXX_CONCEPT_CHECKS",
				"-D_GLIBCXX_DEBUG_BACKTRACE",
				"-D_FORTIFY_SOURCE=3",
				"-D_LIBCPP_ENABLE_ASSERTIONS",
				"-U_GLIBCXX_USE_DEPRECATED",
				"-D_GLIBCXX_SANITIZE_VECTOR",
				"-fsanitize=address,undefined,leak,bounds",
				"-fno-omit-frame-pointer",
				"-fstack-protector-strong",
				"-mshstk",
				"-Wall",
				"-Wextra",
				"-Wcast-qual",
				"-Wpedantic",
				"-Wunused",
				"-Wshadow",
				"-Wnull-dereference",
				"-Wundef",
				"-Wwrite-strings",
				"-Wsign-conversion",
				"-Wsign-compare",
				"-Wsign-promo",
				"-Wconversion",
				"-Wmissing-noreturn",
				"-Wunreachable-code",
				"-Wcast-align",
				"-Wformat=2",
				"-Wswitch-bool",
				"-Wswitch-default",
				"-Wswitch-enum",
				"-Wold-style-cast",
				"-Wdeprecated",
				"-Warray-bounds",
				"-Wshift-overflow",
				"-Wshift-sign-overflow",
				"-Wshorten-64-to-32",
				"-Wthread-safety",
				"-Wzero-as-null-pointer-constant",
				"-pedantic-errors",
				"-Werror",
				"-lstdc++exp",
				"-lstdc++_libbacktrace"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang++"
		},
	]
}